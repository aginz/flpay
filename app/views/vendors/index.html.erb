<div class="navbar text-center">
	<div class="container-fluid">
		<img src="/logo.png" alt="Florida Logo">
	</div>
</div>

<div class="container text-center">
	<h2>Top 25 Florida Government Vendors</h2>
</div>

<div class="container">
	<svg id="svgVisualize" style="width: 1000px; max-width: 90%; margin-left: 20%; margin-right: auto;" height="500"></svg>
		<div class="data">
</div>

<div class="container">
	<div class="panel panel-default">
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Rank</th>
					<th>Vendor Name</th>
					<th>Amount</th>
				</tr>
			</thead>
			<tbody>
				<% rank = 0 %>
				<% @vendor_hash.each do |vendor| %> 
					<tr>
						<td><%= rank += 1 %></td>
						<td><%= vendor[0] %></td>
						<td><%= number_to_currency(vendor[1]) %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>